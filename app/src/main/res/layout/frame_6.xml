<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:padding="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="7dp">

        <TextView android:theme="@style/TextStyle"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/frame_6_text_1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView android:theme="@style/TextStyle"
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autoLink="all"
            android:clickable="true"
            android:linksClickable="true"
            android:textIsSelectable="true"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/frame_6_text_2" />

        <TextView android:theme="@style/TextStyle"
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autoLink="all"
            android:clickable="true"
            android:linksClickable="true"
            android:textIsSelectable="true"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/frame_6_text_3" />

        <TextView android:theme="@style/TextStyle"
            android:id="@+id/textView72"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autoLink="all"
            android:clickable="true"
            android:linksClickable="true"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/frame_6_text_4"
            android:textIsSelectable="true"
            android:textStyle="bold" />

        <TextView android:theme="@style/TextStyle"
            android:id="@+id/textView76"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autoLink="all"
            android:clickable="true"
            android:linksClickable="true"
            android:textIsSelectable="true"
            android:lineSpacingMultiplier="1.2"
            android:text="1. Attracting traffic
            \n2. Receiving applications, calls
            \n3. Increased customer engagement
            \n4. Increasing brand awareness
            \n5. Increased user loyalty" />

        <TextView android:theme="@style/TextStyle"
            android:id="@+id/textView77"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autoLink="all"
            android:clickable="true"
            android:linksClickable="true"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/frame_6_text_5"
            android:textIsSelectable="true"
            android:textStyle="bold" />

        <TextView android:theme="@style/TextStyle"
            android:id="@+id/textView78"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:autoLink="all"
            android:clickable="true"
            android:linksClickable="true"
            android:textIsSelectable="true"
            android:lineSpacingMultiplier="1.2"
            android:text="1. Research target audience and competitors' articles
            \n2. Write a content plan (frequency of publications in the month ahead)
            \n3. Provide quality content
            \n4. Use different types of content
            \n5. Create catchy headlines
            \n6. Stick to the frequency of publications (at least 30 articles per month)" />

    </LinearLayout>
    </ScrollView>

</FrameLayout>